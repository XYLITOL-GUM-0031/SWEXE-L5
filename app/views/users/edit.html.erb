<h1>プロフィール編集</h1>

<%= form_with model: @user, local: true do |f| %>
  <p>
    <%= f.label :name, "表示名" %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :bio, "自己紹介" %><br>
    <%= f.text_area :bio, rows: 4 %>
  </p>

  <p><%= f.submit "更新する" %></p>
<% end %>

<%= link_to "戻る", user_path(@user) %>
