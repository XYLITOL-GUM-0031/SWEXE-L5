<h1>ログイン</h1>

<%= form_with url: '/top/login', method: :post, local: true do %>
  <p>
    <label>ユーザーID：</label>
    <%= text_field_tag :uid %>
  </p>
  <p>
    <label>パスワード：</label>
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= submit_tag 'ログイン' %>
  </p>
<% end %>

<% if flash[:alert] %>
  <p style="color:red;"><%= flash[:alert] %></p>
<% end %>
